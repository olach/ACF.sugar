				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
					<transform-into>(?1::(${1:\$field_name}${2:, ${3:[\$post_id]}}\)$0)</transform-into>
				</append-dynamic>
			</behavior>
		</completion>
		
		<completion string="update_field">
			<behavior>
				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
