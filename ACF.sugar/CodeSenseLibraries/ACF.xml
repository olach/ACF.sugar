		<completion string="acf_form">
			<behavior>
				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
					<transform-into>(?1::(${1:[\$options]}\)$0)</transform-into>
				</append-dynamic>
			</behavior>
		</completion>
	</set>

</codesense>