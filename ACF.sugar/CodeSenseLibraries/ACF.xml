<?xml version="1.0" encoding="UTF-8"?>
<codesense version="1.0">

	<set name="com.advancedcustomfields.actions">
		<completion string="acf/save_post"/>
		<completion string="acf/input/admin_head"/>
		<completion string="acf/field_group/admin_head"/>
		<completion string="acf/input/admin_enqueue_scripts"/>
		<completion string="acf/field_group/admin_enqueue_scripts"/>
		<completion string="acf/render_field"/>
		<completion string="acf/input/form_data"/>
	</set>
	
	<set name="com.advancedcustomfields.functions">
		<behavior>
		    <append-dynamic>
		        <matched-suffix>(\s*\()|[^\(]</matched-suffix>
		    	<transform-into>(?1::(\)$0)</transform-into>
		    </append-dynamic>
		</behavior>
		
		<completion string="get_field">
			<behavior>
				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
					<transform-into>(?1::(${1:\$field_name}${2:, ${3:[\$post_id]}${4:, ${5:[\$format_value]}}}\)$0)</transform-into>
				</append-dynamic>
			</behavior>
		</completion>
		
		<completion string="the_field">
			<behavior>
				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
					<transform-into>(?1::(${1:\$field_name}${2:, ${3:[\$post_id]}}\)$0)</transform-into>
				</append-dynamic>
			</behavior>
		</completion>
		
		<completion string="get_field_object">
			<behavior>
				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
					<transform-into>(?1::(${1:\$field_key}${2:, ${3:[\$post_id]}${4:, ${5:[\$options]}}}\)$0)</transform-into>
				</append-dynamic>
			</behavior>
		</completion>
		
		<completion string="get_sub_field">
			<behavior>
				<append-dynamic>
				    <matched-suffix>(\s*\()|[^\(]</matched-suffix>
					<transform-into>(?1::(${1:\$sub_field_name}\)$0)</transform-into>
